<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="numSeats" prefHeight="400.0" prefWidth="902.0" styleClass="border-pane" stylesheets="@Styles.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="eus.ehu.ridesfx.uicontrollers.QueryRidesController">
    <children>
        <Label layoutX="39.0" layoutY="161.0" styleClass="bold-label" text="EventDate"/>
        <TableView fx:id="tblRides" layoutX="344.0" layoutY="70.0" prefHeight="200.0" prefWidth="445.0"
                   styleClass="table-row-cell" stylesheets="@Styles.css">
            <columns>
                <TableColumn fx:id="qc1" prefWidth="223.5" text="Driver"/>
                <TableColumn fx:id="qc2" prefWidth="97.5" text="NPlaces"/>
                <TableColumn fx:id="qc3" prefWidth="70.0" text="Price"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <Label fx:id="rideDate" layoutX="645.0" layoutY="24.0" text="  "/>
        <Label layoutX="584.0" layoutY="24.0" styleClass="bold-label" text="RideDate:"/>
        <Label layoutX="39.0" layoutY="58.0" styleClass="bold-label" text="DepartCity"/>
        <Label layoutX="39.0" layoutY="106.0" styleClass="bold-label" text="ArrivalCity"/>
        <ComboBox fx:id="comboDepartCity" layoutX="126.0" layoutY="54.0" prefWidth="150.0" styleClass="combo-box"/>
        <ComboBox fx:id="comboArrivalCity" layoutX="126.0" layoutY="101.0" prefWidth="150.0" styleClass="combo-box"/>
        <DatePicker fx:id="datepicker" layoutX="109.0" layoutY="166.0"/>
        <Button fx:id="queryRidesButton" layoutX="123.0" layoutY="242.0" mnemonicParsing="false" onAction="#QueryRides"
                styleClass="bold-label" text="Query Rides"/>
        <Button fx:id="clearButton" layoutX="487.0" layoutY="349.0" mnemonicParsing="false" onAction="#clearGUI"
                styleClass="bold-label" text="Clear"/>
        <ComboBox fx:id="comboNumSeats" layoutX="549.0" layoutY="289.0" prefHeight="18.0" prefWidth="70.0"/>
        <Button fx:id="btnClose" layoutX="545.0" layoutY="349.0" mnemonicParsing="false" onAction="#closeClick"
                styleClass="bold-label" text="Back"/>

        <Label layoutX="110.0" layoutY="19.0" styleClass="bold-label" text="QUERY RIDES">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <Button fx:id="bookingButton" layoutX="645.0" layoutY="288.0" mnemonicParsing="false"
                onAction="#makeReservation" styleClass="bold-label" text="Make a reservation"/>
        <Label fx:id="quantityOfSeatsLabel" layoutX="375.0" layoutY="292.0" styleClass="bold-label"
               text="How many seats do you want?"/>
        <Button fx:id="alertButton" layoutX="664.0" layoutY="288.0" mnemonicParsing="false" onAction="#createAlert"
                styleClass="bold-label" text="Create Alert"/>
        <Label id="Error message" fx:id="alertMessage" layoutX="413.0" layoutY="325.0" prefHeight="18.0"
               prefWidth="312.0" text="">
            <styleClass>
                <String fx:value="error-label"/>
                <String fx:value="bold-label"/>
            </styleClass>
        </Label>
        <Label fx:id="loggedInError" layoutX="377.0" layoutY="315.0" onMouseClicked="#goToLogin" prefHeight="18.0"
               prefWidth="376.0" text="You need to be logged In to proceed. You can click here to log in."
               textAlignment="CENTER">
            <styleClass>
                <String fx:value="bold-label"/>
                <String fx:value="error-label"/>
            </styleClass>
        </Label>
        <Label id="Correct message" fx:id="correctMessage" layoutX="413.0" layoutY="325.0" prefHeight="18.0"
               prefWidth="312.0" styleClass="bold-label" text="">
        </Label>
    </children>
</AnchorPane>
