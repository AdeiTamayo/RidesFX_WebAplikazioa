<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="border-pane" stylesheets="@Styles.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="eus.ehu.ridesfx.uicontrollers.CreateRideController">
    <children>
        <Label layoutX="157.0" layoutY="14.0" styleClass="bold-label" text="Create Ride ">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <DatePicker fx:id="datePicker" layoutX="116.0" layoutY="63.0" prefHeight="26.0" prefWidth="199.0"/>
        <Label layoutX="14.0" layoutY="68.0" styleClass="bold-label" text="Ride Date"/>
        <Label layoutX="12.0" layoutY="138.0" styleClass="bold-label" text="Depart City"/>
        <Label layoutX="12.0" layoutY="210.0" styleClass="bold-label" text="Arrival City"/>
        <Label layoutX="14.0" layoutY="281.0" styleClass="bold-label" text="Number Of Seats"/>
        <Label layoutX="14.0" layoutY="346.0" styleClass="bold-label" text="Price"/>
        <ComboBox fx:id="DepartCityComboBox" layoutX="134.0" layoutY="134.0" prefWidth="150.0" promptText="City"/>
        <ComboBox fx:id="ArrivalCityComboBox" layoutX="134.0" layoutY="207.0" prefWidth="150.0" promptText="City"/>
        <Spinner fx:id="numberSeatsSpinner" editable="true" layoutX="135.0" layoutY="277.0"/>
        <TextField fx:id="txtPrice" layoutX="116.0" layoutY="341.0" prefHeight="26.0" prefWidth="200.0"
                   styleClass="bold-label"/>
        <Button fx:id="btnCreateRide" layoutX="45.0" layoutY="390.0" mnemonicParsing="false" onAction="#createRideClick"
                prefHeight="26.0" prefWidth="142.0" styleClass="bold-label" text="Create Ride"/>
        <Button fx:id="clearButtonCreateRide" layoutX="222.0" layoutY="390.0" mnemonicParsing="false"
                onAction="#clearCreateRide" prefHeight="25.0" prefWidth="136.0" styleClass="bold-label" text="Clear"/>
        <Button layoutX="135.0" layoutY="431.0" mnemonicParsing="false" onAction="#closeClick" prefHeight="27.0"
                prefWidth="142.0" styleClass="bold-label" text="Back"/>
        <Label fx:id="lblErrorMessage" layoutX="316.0" layoutY="436.0" prefHeight="17.0" prefWidth="230.0"/>
        <Label fx:id="lblErrorMinBet" layoutX="16.0" layoutY="472.0"/>
        <TextField fx:id="newDepartCityText" layoutX="315.0" layoutY="134.0" promptText="Enter city to create"/>
        <TextField fx:id="newArrivalCityText" layoutX="315.0" layoutY="207.0" promptText="Enter city to create"/>
    </children>
</AnchorPane>
